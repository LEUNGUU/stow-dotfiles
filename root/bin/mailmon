#!/usr/bin/env python3
from os.path import expanduser
from os import listdir
import re


home = expanduser('~')

mailfiles = [home + '/.config/mail/Inbox/new/',
             home + '/.config/mail/Inbox/cur/']
junkfile = home + '/.config/mail/junk'

froms = ''
new = re.compile('^[0-9]{10}.[0-9]{5}_0.geeko(:2)$')
e = re.compile('^From:')
for mailfile in mailfiles:
    for m in listdir(mailfile):
        print(new.findall(m))


print(froms)
print(new.findall(froms))

#!/usr/bin/zsh
hn=$(hostname)
function my_date () {
    if [[ "$hn" == "k-nine" ]];
    then
        date +"%d/%m/%Y %I:%M:%S"
    else
        echo "$(date +"%a %d %b %Y %I:%M:%S")"
    fi
}

function my_bat() {
    notify_when=$(echo "$(date +'%M') % 5" | bc)
    bat_level=$( cat /sys/class/power_supply/BAT1/capacity )
    if [[ $(date +'%S') -eq 30 ]]
    then
         if [[ $( echo "$bat_level < 20" | bc) -eq 1 && (  $notify_when -eq 0 )  ]]
         then
             notify-send "Battery low " "$bat_level remaining"
         fi
    fi
    echo $bat_level
}

function my_bat_stat() {
    cat /sys/class/power_supply/BAT1/status
}

function my_wifi(){
    ssid=$( nmcli | head -n 1 | awk -F ' ' '{print $4}' )
    if [[ $ssid = 'hide_yo_kids_hide_yo_wi-fi' ]]; then
        echo 'home'
    else
        echo $ssid
    fi
}

function wifi_strength() {
    awk '/[0-9]*/ {if ($3/1 != 0) print $3}' /proc/net/wireless
}

function my_load() {
    load=$(uptime)
    average=("${(@s/ /)load}")
    if [[ "$hn" == "k-nine" ]];
    then
        echo "R: $(free -mh | head -n2 | tail -n 1 | awk '{ print $4}')"
    else
        echo "L:$average[11,-1]"
    fi
}


function my_mail() {
    mailmon
}

function my_weather() {
    modified_date=$(stat $HOME/.config/weather | awk '/Modify/ {split($3, arr, ":"); print arr[1]}')
    if [[ ! "$(date +"%H" )" -eq $modified_date ]]
    then
        rm $HOME/.config/weather
        $HOME/bin/weather.py > $HOME/.config/weather
        weather='W:'$(cat $HOME/.config/weather)'F'
    else
        weather='W:'$(cat $HOME/.config/weather)'F'
    fi
    echo $weather
}

function my_volume() {
    echo "V:$( amixer | awk '/Playback [0-9]{0,5} \[[0-9]{0,3}%]/ {print $5 $6}' | tail -n 1)"
}

if [[ "$hn" == "k-nine" ]];
then
   xsetroot -name  " $(my_mail)  $(my_weather) B: $(my_bat)% $(my_bat_stat) N: $(my_wifi) $(wifi_strength) $($HOME/bin/tmuxip) L: $(my_load) D:$(dropbox status) $(my_date)"
else
    xsetroot -name  " $(my_mail) $(my_weather) $(my_load) N:$(my_wifi) $(wifi_strength) $($HOME/bin/tmuxip) D:$(dropbox status) $(my_volume) $(my_date)"
fi

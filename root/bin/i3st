#!/usr/bin/zsh

hn=$(hostname)
function my_date () {
    if [[ "$hn" == "k-nine" ]];
    then
        date +"%d/%m/%Y %I:%M:%S"
    else
        date +"%a %d %b %Y %I:%M:%S"
    fi
}

function my_bat() {
    notify_when=$(echo "$(date +'%M') % 5" | bc)
    bat_level=$( cat /sys/class/power_supply/BAT1/capacity )
    if [[ $(date +'%S') -eq 30 ]]
    then
         if [[ $( echo "$bat_level < 20" | bc) -eq 1 && (  $notify_when -eq 0 )  ]]
         then
             notify-send "Battery low " "$bat_level remaining"
         fi
    fi
    echo $bat_level
}

function my_bat_stat() {
    cat /sys/class/power_supply/BAT1/status
}

function my_wifi(){
    ssid=$( nmcli | head -n 1 | awk -F ' ' '{print $4}' )
    if [[ $ssid = 'hide_yo_kids_hide_yo_wi-fi' ]]; then
        echo 'home'
    else
        echo $ssid
    fi
}

function wifi_strength() {
    cat /proc/net/wireless | tail -n 1 | awk -F ' ' '{print $3}'
}

function current_window() {
    xpropstr=$(xprop -root _NET_ACTIVE_WINDOW)
    id=("${(@s/ /)xpropstr}")
    $id[-1]
    window=$(xprop -id $id[-1] WM_NAME)
    wind_name=("${(@s/=/)window}")
    name=$wind_name[-1]
    echo $name[3,-2]
}

function my_load() {
    load=$(uptime)
    average=("${(@s/ /)load}")
    if [[ "$hn" == "k-nine" ]];
    then
        echo "Load: "$average[14,-1]
    else
        echo $average[9,-1]
    fi
}


function my_mail() {
    if [[ $(date +'%S') -eq 15 ]]
    then
        $HOME/bin/mailmon > $HOME/.config/mail
        if [[ $(cat $HOME/.config/mail) -gt 0 ]]
        then
            echo "$(cat $HOME/.config/mail) emails | "
        fi
    else
        if [[ $(cat $HOME/.config/mail) -gt 0 ]]
        then
            echo "$(cat $HOME/.config/mail) emails | "
        fi
    fi
}

function my_weather() {
    if [[ $(date +'%M') -eq 0 && $(date +'%S') -eq 45 ]]
    then
        rm $HOME/.config/weather
        $HOME/bin/weather.py > $HOME/.config/weather
    else
        weather=$(cat $HOME/.config/weather)
    fi
    echo $weather
}

if [[ "$hn" == "k-nine" ]];
then
    while; do
        echo "$(my_mail) $(current_window) | bat: $(my_bat)% $(my_bat_stat) | net: $(my_wifi) $(wifi_strength) $($HOME/bin/tmuxip) | $(my_load) | $(my_date)"
        sleep 1s
    done
else
    while; do
        echo "$(my_mail) $(current_window) | $(my_load) | net: $(my_wifi) $(wifi_strength) $($HOME/bin/tmuxip) | $(my_date)"
        sleep 1s
    done
fi

#!/bin/sh

sudo zypper in ruby-devel python-devel python-devel python3-devel lua53-devel
cd /tmp || exit
git clone https://github.com/vim/vim.git
cd vim || exit
./configure --with-features=huge \
            --enable-multibyte \
            --enable-rubyinterp=yes \
            --enable-pythoninterp=yes \
            --enable-python3interp=yes \
            --enable-perlinterp=yes \
            --enable-luainterp=yes \
            # --enable-gui=gtk3 \
            --enable-cscope
make
sudo make install
rm -rf /tmp/vim

sudo zypper rm -u ruby-devel python-devel python-devel python3-devel lua53-devel
